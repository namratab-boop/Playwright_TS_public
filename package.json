{
  "name": "playwright-monorepo",
  "version": "1.0.0",
  "description": "Unified Playwright TS and JS automation",
  "scripts": {
    "test:ts": "npx playwright test --config=Playwright-TS/Playwright-TS/",
    "test:js": "node Playwright-JS/playwright-single.js",
    "test:js-parallel": "node Playwright-JS/playwright-parallel.js",
    "test:all": "npm run test:ts && npm run test:js"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/dotenv": "^6.1.1",
    "@types/node": "^25.1.0",
    "playwright": "^1.58.0",
    "expect": "^30.2.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
